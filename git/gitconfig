[user]
  name = Alex Robbin
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[core]
  quotePath = false
  excludesFile = ~/.gitignore_global
[help]
  autoCorrect = prompt
[diff]
  indentHeuristic = on
[interactive]
  diffFilter = diff-highlight
[rebase]
  autoSquash = true
  autoStash = true
  stat = true
[alias]
  lg = log --graph --abbrev-commit --date=human --pretty=format:'%C(auto)%h %d %Creset %s %C(cyan)(%aN) %Cgreen(%ad)'
  push-each-commit = !git fetch && git rev-list --reverse origin/master..HEAD | xargs -n 1 -I {} bash -c 'git reset --hard {} && git push -f'
[pull]
  ff = only
[push]
  autoSetupRemote = true
  default = simple
[fetch]
  prune = true
[status]
  showUntrackedFiles = all
[commit]
  gpgSign = true
